<form method="post" action="{{ path('moteur_delete', {'id': moteur.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer définitivement ce moteur?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ moteur.id) }}">
    <button class="btn btn-danger">Supprimer ce moteur</button>
</form>
